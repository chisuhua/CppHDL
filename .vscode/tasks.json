{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "options": {
         "cwd": "${workspaceFolder}"
      },
      "dependsOn": "configure"
    },
    {
      "label": "configure",
      "type": "shell",
      "command": "cmake -S ${workspaceFolder} -B ${workspaceFolder}/build -DCMAKE_BUILD_TYPE=Debug",
      "group": "build",
      "options": {
         "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm -rf ${workspaceFolder}/build",
      "group": "build"
    },
    {
      "type": "cmake",
      "label": "CMake: 配置",
      "command": "configure",
      "problemMatcher": [],
      "detail": "CMake 模板 配置 任务"
    }
  ]
}
