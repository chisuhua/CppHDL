{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "cmake --build ${workspaceFolder}/build --target ${fileBasenameNoExtension}",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [
        "$gcc"
      ],
      "dependsOn": "configure"
    },
    {
      "label": "configure",
      "type": "shell",
      "command": "cmake -S ${workspaceFolder} -B ${workspaceFolder}/build -DCMAKE_EXPORT_COMPILE_COMMANDS=1 -DCMAKE_C_COMPILER=/usr/bin/clang -DCMAKE_CXX_COMPILER=/usr/bin/clang++",
      "group": "build"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm -rf ${workspaceFolder}/build",
      "group": "build"
    },
    {
      "type": "cmake",
      "label": "CMake: 配置",
      "command": "configure",
      "problemMatcher": [],
      "detail": "CMake 模板 配置 任务"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: clang 生成活动文件",
      "command": "/usr/bin/clang",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "-I${workspaceFolder}/include",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "调试器生成的任务。"
    }
  ]
}